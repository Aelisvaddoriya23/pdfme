{
  "extends": "./tsconfig.esm",
  "compilerOptions": {
    "target": "es2017",
    "module": "nodenext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "@pdfme/common": [
        "packages/common/dist/esm/src"
      ],
      "@pdfme/schemas": [
        "packages/schemas/dist/esm/src"
      ],
      "@pdfme/schemas/utils": [
        "packages/schemas/dist/esm/src/utils"
      ]
    }
  },
  "include": ["src/**/*.ts"]
}